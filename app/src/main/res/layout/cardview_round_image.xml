<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:padding="@dimen/activity_vertical_margin"
    android:id="@+id/cvPerfil"
    app:cardCornerRadius="@dimen/cv_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civPerfil"
            android:layout_width="@dimen/civPerfil"
            android:layout_height="@dimen/civPerfil"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/puppy_labrador"/>

        <TextView
            android:id="@+id/tvPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cv_perfil_txt_size"
            android:textStyle="bold"
            android:text="Aslan"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

    </LinearLayout>

</android.support.v7.widget.CardView>