<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/cv_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/puppy_husky"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnFavorito"
                android:layout_width="@dimen/ic_bone_size"
                android:layout_height="@dimen/ic_bone_size"
                android:src="@drawable/bone"
                android:layout_margin="@dimen/icon_margin"
                android:padding="@dimen/icon_padding"
                android:layout_alignParentLeft="true"/>
            
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnFavorito"
                android:text="Hola"
                android:textSize="@dimen/cv_txt_size"
                android:layout_margin="@dimen/icon_margin"/>

            <ImageView
                android:id="@+id/imRating"
                android:layout_width="@dimen/ic_bone_size"
                android:layout_height="@dimen/ic_bone_size"
                android:src="@drawable/bone__yellow"
                android:layout_margin="@dimen/icon_margin"
                android:padding="@dimen/icon_padding"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imRating"
                android:text="5"
                android:textSize="@dimen/cv_txt_size"
                android:layout_margin="@dimen/icon_margin"/>
            
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>