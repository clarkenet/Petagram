<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilGrid"
    android:layout_width="@dimen/cv_width_grid"
    android:layout_height="@dimen/cv_height_grid"
    app:cardCornerRadius="@dimen/cv_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPerfilGrid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cv_width_grid"
            android:src="@drawable/puppy_husky"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/ic_bone_size_grid"
                android:layout_height="@dimen/ic_bone_size_grid"
                android:layout_margin="@dimen/icon_margin_grid"
                android:padding="@dimen/icon_padding_grid"
                android:src="@drawable/bone__yellow"/>

            <TextView
                android:id="@+id/tvRatingGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/cv_txt_size_grid"
                android:layout_margin="@dimen/icon_margin"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>